and open the template in the editor.
-->
<html>
    <head>
        <title>Angular</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="angular.min.js"></script>
    </head>
    <body ng-app="Kakeshi">
        <div  ng-controller="sum">
            <input type="text" ng-model="input" ng-change="calculate()">
            <br>
            <label>{{result}}</label>
        </div>    
        <hr>
        <div ng-controller="register">
            <input type="password" ng-model="password"/>
            <input type="password" ng-model="repassword" ng-blur="repw()"/>
            <label>{{pwMatch}}</label>
        </div>
        
        <script>
            var app = angular.module("Kakeshi",[]);
            app.controller("sum",function($scope){
                $scope.calculate = function(){
                    var arrInput = $scope.input.split("");
                    var i;
                    var result=0;
                    for(i=0;i<arrInput.length;i++){
                        result += parseInt(arrInput[i]);
                    }
                    $scope.result = result;
                }
            });
            app.controller("register",function($scope){
                $scope.repw = function(){
                    $scope.pwMatch = "";
                    if ($scope.password != $scope.repassword) {
                        $scope.pwMatch = "password not match"; 
                    }
                }
            });
            
        </script>
    </body>
</html>



